        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Accounts",
            "openapi": "/openapi.yaml",
            "pages": [
              "GET /api/v1/accounts"
            ]
          },
          {
            "group": "Categories",
            "openapi": "/openapi.yaml",
            "pages": [
              "GET /api/v1/categories",
              "GET /api/v1/categories/{id}"
            ]
          },
          {
            "group": "Chats",
            "openapi": "/openapi.yaml",
            "pages": [
              "GET /api/v1/chats",
              "POST /api/v1/chats",
              "GET /api/v1/chats/{id}",
              "PATCH /api/v1/chats/{id}",
